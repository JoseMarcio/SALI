<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
    <property name="connection.datasource">java:/comp/env/jdbc/SaliDB</property>
    <property name="current_session_context_class">thread</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <mapping class="br.com.sali.modelo.Aluno"/>
    <mapping class="br.com.sali.modelo.Professor"/>
    <mapping class="br.com.sali.modelo.Turma"/>
    <mapping class="br.com.sali.modelo.Endereco"/>
    <mapping class="br.com.sali.modelo.Instituicao"/>
    <mapping class="br.com.sali.modelo.Usuario"/>
    <mapping class="br.com.sali.modelo.Questao"/>
    <mapping class="br.com.sali.modelo.Quiz"/>
    <mapping class="br.com.sali.modelo.QuizRealizado"/>
  </session-factory>
</hibernate-configuration>
